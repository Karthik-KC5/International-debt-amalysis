--Number of distinct countries in the dataset

SELECT COUNT(DISTINCT country_name) AS total_countries
FROM international_debt;


--List of different debt indicators available

SELECT DISTINCT indicator_name AS debt_indicators
FROM international_debt
ORDER BY debt_indicators;


--Total amount of debt owned by all countries (in millions)

SELECT ROUND(SUM(debt)/1000000, 2) AS total_debt_in_millions
FROM international_debt;


--Sort countries in descending order of their total debt

SELECT country_name, 
       SUM(debt) AS total_debt
FROM international_debt
GROUP BY country_name
ORDER BY total_debt DESC;


--Country with the highest total debt

SELECT country_name, 
       SUM(debt) AS total_debt
FROM international_debt
GROUP BY country_name
ORDER BY total_debt DESC
LIMIT 1;


--Countries with highest debt growth (if year column exists)

SELECT country_name,
       (MAX(debt) - MIN(debt)) AS debt_growth
FROM international_debt
GROUP BY country_name
ORDER BY debt_growth DESC;


--Countries with highest PRIVATE and PUBLIC owned debt

SELECT country_name, 
       indicator_name,
       SUM(debt) AS total_debt
FROM international_debt
WHERE indicator_name LIKE '%private%' OR indicator_name LIKE '%public%'
GROUP BY country_name, indicator_name
ORDER BY total_debt DESC;


--Average amount of debt across different debt indicators

SELECT indicator_name,
       ROUND(AVG(debt), 2) AS avg_debt
FROM international_debt
GROUP BY indicator_name
ORDER BY avg_debt DESC;


--Country with the highest principal repayments (DT.AMT.DLXF.CD)

SELECT country_name,
       SUM(debt) AS total_principal_repayments
FROM international_debt
WHERE indicator_code = 'DT.AMT.DLXF.CD'
GROUP BY country_name
ORDER BY total_principal_repayments DESC
LIMIT 1;
